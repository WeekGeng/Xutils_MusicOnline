<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xuils.MainActivity"
    xmlns:app="http://schemas.android.com/apk/res/">
    <com.example.administrator.xutils_musiconline.refresh.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_height="match_parent"
        android:layout_above="@+id/bootom"
        android:layout_width="match_parent" >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </com.example.administrator.xutils_musiconline.refresh.SwipeRefreshLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bootom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <com.example.administrator.xutils_musiconline.extras.CircleImageView
            android:id="@+id/singer_touxiang"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:border_color="#0000"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher"
            ></com.example.administrator.xutils_musiconline.extras.CircleImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/song_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:maxEms="5"
                android:ellipsize="end"
                android:text="大城小爱"
                />
            <TextView
                android:id="@+id/singer_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="王力宏"
                android:maxEms="5"
                android:ellipsize="end"
                android:layout_weight="1"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/before_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_previous"
                />
            <ImageView
                android:id="@+id/start_pause_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@android:drawable/ic_media_play"
                />
            <ImageView
                android:id="@+id/next_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_next"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
